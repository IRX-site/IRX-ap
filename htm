<script>
// تنظیمات مدیریت
const ADMIN_PASSWORD = "IRX@1403"; // رمز دلخواه خود را اینجا قرار دهید

// ایجاد دکمه مدیریت
const adminBtn = document.createElement('button');
adminBtn.textContent = '📊 مشاهده آمار';
adminBtn.style.position = 'fixed';
adminBtn.style.bottom = '20px';
adminBtn.style.left = '20px';
adminBtn.style.zIndex = '1000';
adminBtn.style.padding = '10px 15px';
adminBtn.style.backgroundColor = '#FFD700';
adminBtn.style.color = '#000';
adminBtn.style.border = 'none';
adminBtn.style.borderRadius = '5px';
adminBtn.style.cursor = 'pointer';

adminBtn.addEventListener('click', () => {
  const password = prompt('🔒 لطفا رمز عبور مدیریت را وارد کنید:');
  if (password === ADMIN_PASSWORD) {
    // نمایش آمار ساده (میتوانید به Google Analytics متصل کنید)
    alert(`✅ تعداد بازدیدهای امروز: ${localStorage.getItem('dailyVisits') || 0} نفر`);
    window.open('https://analytics.google.com/', '_blank'); // انتقال به Google Analytics
  } else {
    alert('❌ رمز عبور اشتباه است!');
  }
});

document.body.appendChild(adminBtn);

// شمارش بازدیدها
if (!localStorage.getItem('dailyVisits')) {
  localStorage.setItem('dailyVisits', '0');
}
const today = new Date().toDateString();
if (localStorage.getItem('lastVisitDate') !== today) {
  localStorage.setItem('lastVisitDate', today);
  localStorage.setItem('dailyVisits', '0');
}
localStorage.setItem('dailyVisits', 
  parseInt(localStorage.getItem('dailyVisits')) + 1
);
</script>